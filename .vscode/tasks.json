{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ build active file",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				//"${file}",
				//"${fileDirname}/src/*.cpp",
				"${fileWorkspaceFolder}/main.cpp",
				"${fileWorkspaceFolder}/src/*.cpp",
				"-lstdc++fs",
				"-std=c++17",
				//"-pthread",
				"-I",
				//"${fileDirname}/include",
				"${fileWorkspaceFolder}/include",
				"-o",
				//"${fileDirname}/${fileBasenameNoExtension}",
				//"${fileWorkspaceFolder}/${fileBasenameNoExtension}", prends le nom du fichier cliqu√©
				"${fileWorkspaceFolder}/bootusb",
				"`pkg-config",
				"gtkmm-3.0",
				"--cflags",
				"--libs`",
				"-Wall",
				"-Wextra",
				"-O2"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}